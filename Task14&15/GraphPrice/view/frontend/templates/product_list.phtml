<script>
    require(
        [
            'jquery',
            'Magento_Ui/js/modal/modal'
        ],
        function(
            $,
            modal
        ) {
            setTimeout(function(){
                var options = {
                    type: 'popup',
                    responsive: true,
                    innerScroll: true,
                    title: 'Product Description',
                    buttons: [{
                        text: $.mage.__('Ok'),
                        class: '',
                        click: function () {
                            this.closeModal();
                        }
                    }]
                };
    
                var popup = modal(options, $('.popup-modal'));
                $(".learn-more").on('click',function(){ 
                    var obj = $(this);
                    obj.next(".popup-modal").modal("openModal");
                });
            }, 2000);

        }
    );
</script>